@model FreightFlow.Models.FreightInventories

@{
    ViewData["Title"] = "OrderEdit";
}
<p>@Global1.DelId</p>

<h1>Edit</h1>

<h4>Customer</h4>
<hr />
        <form asp-action="Edit">
            

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <div style="color:black">DeliveryName</div>
                                    <div class="form-group">
                                       
                                        <input type="text" asp-for="DeliveryName" class="form-control" />
                                        <span asp-validation-for="DeliveryName" class="text-danger"></span>
                                    </div>
                                </th>
                                <th>
                                    <div style="color:black">Origin</div>
                                    <div class="form-group">

                                        <input type="text"  asp-for="Origin" class="form-control" />
                                        <span asp-validation-for="Origin" class="text-danger"></span>
                                    </div>
                                </th>
                                <th>
                                    <div style="color:black">Destination</div>
                                    <div class="form-group">

                                        <input type="text" asp-for="Destination" class="form-control" />
                                        <span asp-validation-for="Destination" class="text-danger"></span>
                                    </div>
                                </th>
                                <th>
                                    <div style="color:black">Contents</div>
                                    <div class="form-group">

                                        <input type="text"  asp-for="Contents" class="form-control" />
                                        <span asp-validation-for="Contents" class="text-danger"></span>
                                    </div>
                                </th>
               
                <th>
                    <div style="color:black">Weight</div>
                    <div class="form-group">
                        
                        <input type="number" asp-for="Weight" class="form-control" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                </th>
                <th>
                    <div style="color:black">Length</div>
                    <div class="form-group">
                       
                        <input type="number" asp-for="Length" class="form-control" />
                        <span asp-validation-for="Length" class="text-danger"></span>
                    </div>
                </th>
                <th>
                    <div style="color:black">Width</div>
                    <div class="form-group">
                        
                        <input type="number" asp-for="Width" class="form-control" />
                        <span asp-validation-for="Width" class="text-danger"></span>
                    </div>
                </th>
                <th>
                    <div style="color:black">Height</div>
                    <div class="form-group">
                        
                        <input type="number" asp-for="Height" class="form-control" />
                        <span asp-validation-for="Height" class="text-danger"></span>
                    </div>
                </th>
                <th>
                    <div style="color:black">ScheduledLoad</div>
                    <div class="form-group">

                        <input type="datetime-local" asp-for="ScheduledLoad" class="form-control" />
                        <span asp-validation-for="ScheduledLoad" class="text-danger"></span>
                    </div>
                </th>
                <th>
                    <div style="color:black">ScheduledDelivery</div>
                    <div class="form-group">
                        
                        <input type="datetime-local" asp-for="ScheduledDelivery" class="form-control" />
                        <span asp-validation-for="ScheduledDelivery" class="text-danger"></span>
                    </div>
                </th>
                <th>
                    <div style="color:black">Status</div>
                    <div class="form-group">

                        <input type="text" asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </th>
                <th>
                    <div style="color:black">Description</div>
                    <div class="form-group">

                        <input type="text" asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
    </div>
                </th>
                </tr>
                </thead>
                </table>
            
            <div align="center">
                <input type="submit" value="Create" class="btn btn-success" />
                <a class="btn btn-primary" asp-area="" asp-controller="Delivery" asp-action="OrderHistory">OrderHistory</a>
                <a class="btn btn-secondary" asp-area="" asp-controller="Delivery" asp-action="OrderEdit">OrderEdit</a>
                <a class="btn btn-danger" asp-area="" asp-controller="Delivery" asp-action="OrderCancel">OrderCancel</a>

            </div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }
        </form>
    


<div>
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index">Back to List</a>
</div>